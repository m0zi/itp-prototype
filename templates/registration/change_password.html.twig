{% extends 'base.html.twig' %}

{% block title %}{{ 'title.change_password'|trans }}!{% endblock %}

{% block body %}
    <div class="jumbotron">
        <h1 class="display-4">{{ 'title.change_password'|trans }}</h1>
        <p class="lead">{{ 'description.top.change_password'|trans }}</p>
        <hr class="my-4">
        {% if error %}
            <div class="alert alert-danger"
                 role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div>
            {{ form_start(my_form, {'method': 'POST'}) }}
            {{ form_widget(my_form) }}
            <input class="btn btn-primary btn-lg" type="submit" value="{{ 'generic.update'|trans }}"/>
            {{ form_end(my_form) }}
            {{ form_errors(my_form) }}
        </div>
    </div>
{% endblock %}
