{% extends 'base.html.twig' %}

{% block title %}Participants!{% endblock %}

{% block body %}
    <div class="jumbotron">
        <h1 class="display-4">Your registered Officials!</h1>
        <p class="lead">Please enter as much information as you have available for the time being.</p>

        <hr class="my-4">

        <h3> Registered officials </h3>

        <table class="table table-striped table-middle-aligned">
            <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">First</th>
                <th scope="col">Last</th>
                <th scope="col">Function</th>
                <th scope="col">m/w</th>
                <th scope="col">ITC?</th>
                <th scope="col">Friday</th>
                <th scope="col">Saturday</th>
                <th scope="col">+-</th>
            </tr>
            </thead>
            <tbody>
            {% for official in officials %}
                <tr>
                    <td>{{ official.id }}</td>
                    <td>{{ official.firstName }}</td>
                    <td>{{ official.lastName }}</td>
                    <td>{{ official.role }}</td>
                    <td>{{ official.gender }}</td>
                    <td>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" disabled
                                    {% if official.itc %}
                                        checked
                                    {% endif %}
                                   \>
                        </div>
                    </td>
                    <td>{{ official.friday }}</td>
                    <td>{{ official.saturday }}</td>
                    <td class="text-right">
                        <div class="item-actions">
                            <a href="{{ path('official_edit', {id: official.id}) }}" class="btn btn-sm btn-primary">
                                <i class="fa fa-edit" aria-hidden="true"></i> edit
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


    </div>
{% endblock %}
