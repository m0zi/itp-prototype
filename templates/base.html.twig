<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="stylesheet"
          href="https://bootswatch.com/4/flatly/bootstrap.min.css">
    <style>
        .navbar-brand {
            padding: 0px; /* firefox bug fix */
        }
    </style>
    {% block stylesheets %}{% endblock %}
</head>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
        integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"
        integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T"
        crossorigin="anonymous"></script>

{% block javascripts %}{% endblock %}

<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="{{ path('welcome') }}">
        <img src="{{ asset('images/logo_white.svg') }}" width="100" alt="ITP">
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('welcome') }}">Home</a>
            </li>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('edit_registration') }}">Edit Contact Information</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('officials') }}">Edit Officials</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('contestants') }}">Edit Contestants</a>
                </li>
            {% else %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('registration') }}">Register</a>
                </li>
            {% endif %}

            <li class="nav-item">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a class="nav-link" href="{{ path('logout') }}">Logout</a>
                {% else %}
                    <a class="nav-link" href="{{ path('login') }}">Login</a>
                {% endif %}
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <span class="navbar-text">
                        Logged in as:
                        {{ app.user.firstname|default('') }} {{ app.user.lastname|default('') }}
                        ({{ app.user.club|default('') }})
                    </span>
                {% else %}
                {% endif %}

            </li>
        </ul>
    </div>
</nav>
<main role="main" class="container">
    {% block body %}{% endblock %}
</main>
</body>
</html>
