{% extends 'base.html.twig' %}

{% block title %}{{ 'title.login'|trans }}!{% endblock %}

{% block body %}
    <div class="jumbotron">
        <h1 class="display-4">{{ 'title.login'|trans }}</h1>
        <p class="lead">{{ 'description.login'|trans }}</p>
        <hr class="my-4">
        {% if error %}
            <div class="alert alert-danger"
                 role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div>
            {{ form_start(my_form) }}
            {{ form_widget(my_form) }}
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"/>
            <input class="btn btn-primary btn-lg" type="submit" value="{{ 'generic.login'|trans }}"/>
            <a class="btn btn-link" href="{{ path('forgot_password') }}"
               role="button">{{ 'generic.forgot_password'|trans }}</a>
            {{ form_end(my_form) }}
            {{ form_errors(my_form) }}
        </div>
    </div>
{% endblock %}
